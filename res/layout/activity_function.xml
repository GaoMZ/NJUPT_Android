<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dip"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/position2" />

        <ImageButton
            android:id="@+id/find"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/find2" />

    </LinearLayout>
<LinearLayout 
     	android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dip"
        android:orientation="horizontal"   >
    
    <ImageButton
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_weight="1"
        android:background="@drawable/lock2" />

      <ImageButton
          android:id="@+id/protect"
          android:layout_width="wrap_content"
          android:layout_height="120dp"
          android:layout_above="@+id/history"
          android:layout_alignParentRight="true"
          android:layout_weight="1"
          android:background="@drawable/protect2" />

      </LinearLayout>
      <LinearLayout 
           android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dip"
        android:orientation="horizontal">

    <ImageButton
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lock"
        android:layout_weight="1"
        android:background="@drawable/message2" />

    <ImageButton
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/message"
        android:layout_weight="1"
        android:background="@drawable/history2" />
    </LinearLayout>

</RelativeLayout>
